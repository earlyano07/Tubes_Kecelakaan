<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windows10.kecelakaan.DetailKecelakaan">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dgambar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:hint="Upload by :"
            android:gravity="center"
            android:textSize="8pt"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dgambar"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="5dp"
            android:hint="username"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/by"
            android:hint="Deskripsi Kecelakaan"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="11pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dwaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dtdeskripsi"
            android:hint="waktu"
            android:gravity="center"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/dtempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dwaktu"
            android:gravity="center"
            android:hint="Lokasi kejadian" />

        <ImageView
            android:id="@+id/dgambar"
            android:layout_width="210dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
